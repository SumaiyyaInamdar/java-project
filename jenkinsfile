pipeline {
    agent any

    tools {
        maven 'Maven 3.6.3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SumaiyyaInamdar/java-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Stop old app if running (optional)
                sh 'pkill -f "java -jar" || true'

                // Run in background
                sh 'nohup java -jar target/yourapp.jar > app.log 2>&1 &'
            }
        }
    }
}
