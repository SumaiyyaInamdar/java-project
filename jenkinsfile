pipeline {
    agent any

    tools {
        maven 'Maven 3.6.3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SumaiyyaInamdar/java-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'pkill -f "java -jar" || true'
                sh 'nohup java -jar target/yourapp.jar > app.log 2>&1 &'
            }
        }
    }

    post {
        always {
            sh 'tail -n 20 app.log || true'
        }
    }
}
